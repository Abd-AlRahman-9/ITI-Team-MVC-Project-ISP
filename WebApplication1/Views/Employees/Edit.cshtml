@using WebApplication1.Models
@model Employee
@{
    SelectList branchlist = new SelectList(ViewBag.branchlist, "Id", "Name");

}
<h3 class=" "> Update Employee <i class="fas fa-user"></i> </h3>

<div class="container">
    <div class="row d-flex flex-column justify-content-between align-items-center">
        <form method="post" asp-action="edit" asp-controller="employees" class="col-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <!--Fill data-->
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>



            <div class="mt-3">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>


            <div class="mt-3">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>


            <div class="mt-3">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>




            
            <div>
            <label asp-for="BranchId"></label>

                <select asp-for="BranchId" asp-items="branchlist" class="form form-control">
            <option value="0"> --Select -- </option>
            </select>
                <span asp-validation-for="BranchId" class="text-danger"></span>
            </div>

            <input class="mt-3 btn btn-info text-white" type="submit" value="save" />
        </form>

        <a  class="btn btn-dark w-25 my-2" href="/Employee/index">Back To list</a>



    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

