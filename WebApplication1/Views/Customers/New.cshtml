@using WebApplication1.ViewModels
@model CustomerViewModel
@{
    SelectList package = new SelectList(ViewBag.packagelist, "Id", "Name");
    SelectList service = new SelectList(ViewBag.servicelist, "Id", "Name");

}
<h3 class=" ">New Customer</h3>

<div class="container">
    <div class="row d-flex justify-content-between align-items-center">
        <form method="post" asp-action="new" asp-controller="Customers" class="col-8">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <!--Fill data-->
            <div>
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          

            <div>
                <label asp-for="Adress"></label>
                <input asp-for="Adress" class="form form-control" />
                <span asp-validation-for="Adress" class="text-danger"></span>
            </div>

            <div>
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            
            <div>
            <label asp-for="PackageId"></label>

            <select asp-for="PackageId" asp-items="package" class="form form-control">
            <option value="0"> --Select ServiceProvider-- </option>
            </select>
            <span asp-validation-for="PackageId" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ProviderId"></label>

                <select asp-for="ProviderId" asp-items="service" class="form form-control">
                    <option value="0"> --Select ServiceProvider-- </option>
                </select>
                <span asp-validation-for="ProviderId" class="text-danger"></span>
            </div>

            <input class="mt-3 btn btn-info text-white" type="submit" value="create" />
        </form>



    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

