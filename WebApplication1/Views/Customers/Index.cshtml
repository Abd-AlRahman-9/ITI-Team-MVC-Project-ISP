@using WebApplication1.Models
@model List<Customer>
@* @{
   
} *@

<h3 class="text-center pt-4">HELLO CUSTOMER <i class="far fa-smile-wink text-warning"></i></h3>
<div class="container py-5">  
    <div class="row" >
        <div class=" d-flex justify-content-center align-items-center" >
            <button class="btn" ><a href="/customers/new" class=" text-decoration-none fw-bold btn btn-outline-primary"> ADD </a> </button>
            <button class="btn" ><a href="" class=" text-decoration-none fw-bold btn btn-outline-info"> View </a> </button>

        </div>
    </div>
</div>

<table class="table table-striped text-center border container">
    <thead>
        <tr>
            <th> Name</th>
            <th>Address </th>
            <th>Email </th>
            <th>Phone </th>
            <th>BranchName </th>
            <th>PackageName </th>
           

        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.Branch?.Name</td>
                <td>@item.Package?.Name</td>
                <td></td>
                <td>
                    <button class="btn"> <a href="/Customers/Edit/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-warning me-2"> Update </a> </button>
                    <button class="btn"> <a href="/Customers/Delete/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-danger"> Delete </a> </button>

                </td>


            </tr>
        }

    </tbody>
</table>
