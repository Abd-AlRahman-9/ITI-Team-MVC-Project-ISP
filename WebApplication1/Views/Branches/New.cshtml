@using WebApplication1.ViewModels
@model BranchViewModel
<h3 class=" ">New Branch</h3>

<div class="container">
    <div class="row d-flex justify-content-between align-items-center">
        <form method="post" asp-action="new" asp-controller="Branches" class="col-8">
            <div asp-validation-summary="All" class="text-danger"></div>
            <!--Fill data-->
            <div >
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="ManagerName"></label>
                <input asp-for="ManagerName" class="form form-control" />
                <span asp-validation-for="ManagerName" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="Phone"></label>
                <input asp-for="Phone" class="form form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="mt-3">
                <label asp-for="Fax"></label>
                <input asp-for="Fax" class="form form-control" />
                <span asp-validation-for="Fax" class="text-danger"></span>
            </div>
            @*
            <div>
            <label asp-for="ServiceProvider"></label>

            <select asp-for="ServiceProvider" asp-items="" class="form form-control">
            <option value="0"> --Select ServiceProvider-- </option>
            </select>
            <span asp-validation-for="ServiceProvider" class="text-danger"></span>
            </div> *@

            <input class="mt-3 btn btn-info text-white" type="submit" value="create" />
        </form>



    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

