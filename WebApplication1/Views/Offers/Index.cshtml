@model IEnumerable<WebApplication1.Models.Offer>

<div class="container py-5">


    <p>
        <a class="btn btn-info text-white" asp-action="Create">Create New</a>
    </p>
    <table class="table border table-striped text-center">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Duration)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Discount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cancel)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duration) months
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount) $
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cancel)
                    </td>
                    <td>

                        <button class="btn"><a href="/Offers/edit/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-warning me-2"> Update </a> </button>
                        <button class="btn"><a href="/Offers/Details/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-success"> Detalis </a> </button>
                        <button class="btn"><a href="/Offers/Delete/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-danger"> Delete </a> </button>

                        @*     <span class="btn btn-primary text-decoration-none "> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </span>
                    <span class="btn btn-warning"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </span>
                    <span class="btn  btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</span> *@
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>



