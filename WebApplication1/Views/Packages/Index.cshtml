@model IEnumerable<WebApplication1.ViewModels.PackagesViewModel>


    <div class="container py-4">

    <p>
        <a class="btn btn-info" asp-action="Create">Create New</a>
    </p>
    <div class="row ">
        <table class="table border table-striped py-3 ">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Limited)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Limited)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>

                            <button class="btn"><a href="/packages/edit/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-info me-2"> Update </a> </button>
                            <button class="btn"><a href="/packages/Details/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-success"> Detalis </a> </button>
                            <button class="btn"><a href="/packages/Delete/@item.Id" class=" text-decoration-none fw-bold btn btn-outline-danger"> Delete </a> </button>

                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

    </div>



